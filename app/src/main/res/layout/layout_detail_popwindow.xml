<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:layout_width="90dp"
    android:layout_height="80dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:src="@mipmap/img_cort"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="16dp"
    android:id="@+id/img_pop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_pop_price"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/img_pop"
        android:layout_marginLeft="6dp"
        app:layout_constraintTop_toTopOf="@id/img_pop"
        android:text="的风格和健康"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_pop_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_pop_price"
        app:layout_constraintTop_toBottomOf="@id/tv_pop_price"
        android:layout_marginTop="10dp"
        android:text="啊的风格和体育部"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_pop_close"
        android:src="@mipmap/img_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_pop"
        android:layout_marginRight="10dp"/>
<com.example.a0914_shop.common.CartCustomView
    android:id="@+id/layout_cartwindow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent">
    <include layout="@layout/layout_custom_cart"/>
</com.example.a0914_shop.common.CartCustomView>
</androidx.constraintlayout.widget.ConstraintLayout>